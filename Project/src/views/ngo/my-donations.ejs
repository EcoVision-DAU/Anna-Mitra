<%- include('../partials/header') %>

<%- include('../partials/navbar-dark') %>

<div class="d-flex am-dark" style="height: 95vh;">
    <%- include('../partials/sidebar-dark'); %>
    
    <div class="content w-100 p-4 ngo-donations" style="overflow-y: auto;">
        <div class="w-100 text-white">
            <div class="mb-4">
                <h4>Your Active and Completed Donations</h4>
                <p>View your active donations which are under process and try to diliver them ASAP!</p>
            </div>
            <!-- Active Donations -->
            <div class="mb-5 p-4 rounded" style="background-color: var(--am-darktheme-light);">
                <ul class="nav nav-tabs mb-3" id="donationTabs" role="tablist">
                    <% const ngoTabs=["All", "Assigned" , "Scheduled" , "Picked" , "Completed" , "Failed" ]; %>
            
                        <% ngoTabs.forEach((tab, i)=> { %>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link <%= i === 0 ? 'active' : '' %>" data-bs-toggle="tab"
                                    data-bs-target="#<%= tab.toLowerCase() %>" type="button" role="tab">
                                    <%= tab %>
                                </button>
                            </li>
                            <% }) %>
                </ul>
            
                <div class="tab-content" id="donationTabsContent">
            
                    <% ngoTabs.forEach((tab, tabIndex)=> {
                        const filteredDonations = tab === "All"
                        ? donations
                        : donations.filter(d => d.status === tab);
                        %>
            
                        <div class="tab-pane fade <%= tabIndex === 0 ? 'show active' : '' %>" id="<%= tab.toLowerCase() %>"
                            role="tabpanel">
            
                            <div class="row g-4">
            
                                <% if (filteredDonations.length===0) { %>
                                    <div class="text-center py-5">
                                        No <%= tab %> donations found.
                                    </div>
                                    <% } %>
            
                                        <% filteredDonations.forEach(donation=> { %>
            
                                            <div class="col-lg-3 col-6">
                                                <div class="card h-100 shadow-sm border-0">
            
                                                    <img src="<%= donation.images?.length ? donation.images[0] : '/default-food.png' %>"
                                                        class="card-img-top" alt="<%= donation.title %>">
            
                                                    <div class="card-body d-flex flex-column">
                                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                                            <h5 class="card-title fw-semibold text-truncate-1 mb-0">
                                                                <%= donation.title %>
                                                            </h5>
            
                                                            <span class="badge-status badge-<%= donation.status.toLowerCase() %>">
                                                                <%= donation.status %>
                                                            </span>
                                                        </div>
            
                                                        <p class="mb-3">
                                                            <%= donation.source || 'Food Source' %>
                                                        </p>
            
                                                        <ul class="list-unstyled mb-4">
                                                            <li class="d-flex align-items-center mb-2">
                                                                <i class="bi bi-geo-alt me-2"></i>
                                                                <span class="text-truncate-1">
                                                                    <%= donation.address || 'N/A' %>
                                                                </span>
                                                            </li>
            
                                                            <li class="d-flex align-items-center mb-2">
                                                                <i class="bi bi-telephone me-2"></i>
                                                                <span>
                                                                    <%= donation.contact || 'N/A' %>
                                                                </span>
                                                            </li>
            
                                                            <li class="d-flex align-items-center mb-2">
                                                                <i class="bi bi-box-seam me-2"></i>
                                                                <span>
                                                                    <%= donation.items.length %> items
                                                                </span>
                                                            </li>
            
                                                            <li class="d-flex align-items-center">
                                                                <i class="bi bi-calendar-event me-2"></i>
                                                                <span>
                                                                    Expires:
                                                                    <%= donation.items[0]?.expiryDate ?
                                                                        donation.items[0].expiryDate.toISOString().split("T")[0]
                                                                        : 'N/A' %>
                                                                </span>
                                                            </li>
                                                        </ul>
            
                                                        <div class="d-flex gap-2 mt-auto">
                                                            <a href="/donations/<%= donation._id %>" class="btn btn-view flex-fill">
                                                                View
                                                            </a>
            
                                                        </div>
                                                    </div>
            
                                                </div>
                                            </div>
            
                                            <% }) %>
            
                            </div>
                        </div>
            
                        <% }) %>
            
                </div>
            </div>

        </div>
    </div>
</div>

<%- include('../partials/footer') %>