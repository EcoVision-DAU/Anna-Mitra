<%- include('../partials/header', { pageTitle: 'Notifications' }) %>
<%- include('../partials/navbar-dark') %>

<div class="d-flex am-dark" style="height: 95vh;">
  <%- include('../partials/sidebar-donor', { active: 'notifications' }) %>

  <div class="content w-100 p-4 text-white" style="overflow-y:auto;">
    <div class="mb-3">
      <h4 class="mb-0">Notifications</h4>
    </div>

    <div class="list-group">
      <% (notifications || []).forEach(n => { %>
        <div class="list-group-item bg-transparent text-white border-secondary d-flex justify-content-between align-items-start">
          <div class="me-3">
            <div class="fw-semibold"><%= n.title %></div>
            <small class="text-secondary"><%= n.message %></small>
          </div>
          <small class="text-secondary"><%= n.timeAgo %></small>
        </div>
      <% }) %>

      <% if (!notifications || notifications.length === 0) { %>
        <div class="card">
          <div class="card-body text-center text-secondary">No notifications.</div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
