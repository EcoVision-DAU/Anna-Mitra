<%- include('../partials/header') %>

<%- include('../partials/navbar-dark') %>

<div class="d-flex am-dark" style="height: 95vh;">

    <%- include('../partials/sidebar-dark') %>

    <div class="content w-100 p-4 ngo-dashboard" style="overflow-y: auto;">
        <div class="w-100 text-white">
            <div class="container-fluid py-4">
                <div class="ngo-details-card rounded p-0 overflow-hidden">
    
                    <!-- NGO Header -->
                    <div class="p-4 d-flex justify-content-between align-items-center flex-wrap">
                        <div class="d-flex align-items-center">
                            <div class="ngo-logo bg-secondary rounded-circle me-3">
                                <% if (ngo.profilePicture) { %>
                                    <img src="<%= ngo.profilePicture %>" alt="NGO Logo" class="rounded-circle"
                                        style="width: 60px; height: 60px; object-fit: cover;">
                                    <% } %>
                            </div>
    
                            <div>
                                <h4 class="mb-1 text-white">
                                    <%= ngo.organizationName %>
                                </h4>
    
                                <div class="d-flex flex-wrap align-items-center text-white small">
                                    <span class="me-3">
                                        <i class="bi bi-geo-alt-fill me-1"></i>
                                        <%= ngo.city %>, <%= ngo.state %>
                                    </span>
    
                                    <span class="me-3">
                                        <i class="bi bi-star-fill text-warning me-1"></i>
                                        <!-- if you later store rating -->
                                        <%= ngo.rating || '4.8/5.0 (245 reviews)' %>
                                    </span>
    
                                    <span>
                                        <i class="bi bi-calendar-event me-1"></i>
                                        Established: <%= ngo.establishedYear || 'N/A' %>
                                    </span>
                                </div>
                            </div>
                        </div>
    
                        <% if(ngo.hasJoined) { %>
                            <div class="mt-3 mt-md-0">
                                <button class="btn btn-success me-2" disabled>
                                    <i class="bi bi-check-circle me-1"></i>Joined
                                </button>
                            </div>
                        <% } else if(ngo.hasRequested) { %>
                            <div class="mt-3 mt-md-0">
                                <button class="btn btn-success me-2" disabled>
                                    <i class="bi bi-check-circle me-1"></i>Request Sent
                                </button>
                            </div>
                        <% } else { %>
                            <div class="mt-3 mt-md-0">
                                <button class="btn btn-success me-2" onclick="joinNGO(this, '<%= ngo.userId %>')">
                                    <i class="bi bi-plus-circle me-1"></i>Join
                                </button>
                            </div>
                        <% } %>
                    </div>
                </div>
    
                <!-- Content Sections -->
                <div class="row mt-4 g-4">
    
                    <!-- About -->
                    <div class="col-lg-8">
                        <div class="ngo-section p-4 rounded mb-4">
                            <h5 class="text-white mb-3">About</h5>
                            <p class="text-white">
                                <%= ngo.about %>
                            </p>
                        </div>
    
                        <!-- Impact Statistics -->
                        <div class="ngo-section p-4 rounded d-flex justify-content-around flex-wrap gap-3">
                            <div class="stat-item">
                                <h5 class="text-success mb-1 me-2 text-center">
                                    <i class="bi bi-box-seam me-2"></i>
                                    <%= ngo.donationsHandled?.length || 0 %>
                                </h5>
                                <p class="text-white mb-1">Active donations</p>
                            </div>
    
                            <div class="stat-item">
                                <h5 class="text-info mb-1 me-2 text-center">
                                    <i class="bi bi-people-fill me-2"></i>
                                    <%= ngo.volunteers?.length || 0 %>
                                </h5>
                                <p class="text-white mb-1">Volunteers team</p>
                            </div>
    
                            <div class="stat-item">
                                <h5 class="text-primary mb-1 me-2 text-center">
                                    <i class="bi bi-check2-circle me-2"></i>
                                    <%= ngo.donationsCompleted || 0 %>
                                </h5>
                                <p class="text-white mb-1">Donations Delivered</p>
                            </div>
                        </div>
                    </div>
    
                    <!-- Contact Information -->
                    <div class="col-lg-4">
                        <div class="ngo-section p-4 rounded">
                            <h5 class="text-white mb-3">Contact Information</h5>
    
                            <p class="mb-2 text-white">
                                <i class="bi bi-geo-alt-fill me-2"></i>
                                <%= ngo.address %>, <%= ngo.city %>, <%= ngo.pincode %>
                            </p>
    
                            <p class="mb-2 text-white">
                                <i class="bi bi-telephone-fill me-2"></i>
                                <%= ngo.contact %>
                            </p>
    
                            <p class="mb-2 text-white">
                                <i class="bi bi-envelope-fill me-2"></i>
                                <%= ngo.email %>
                            </p>
    
                            <p class="mb-2 text-white">
                                <i class="bi bi-globe me-2"></i>
                                <%= ngo.website || 'No website available' %>
                            </p>
                            
                        </div>
                    </div>
                </div>
            </div>
    
        </div>
    </div>
</div>

<script>
    async function joinNGO(btn, ngoId) {
        try {
            const res = await fetch(`/ngo/${ngoId}/request-join`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            const data = await res.json();
            if (data.success) {
                showAlert('success', 'Join request sent successfully!');
                btn.disabled = true;
                btn.innerHTML = '<i class="bi bi-check-circle me-1"></i>Request Sent';
            } else {
                showAlert('danger', 'Failed to send join request: ' + data.message);
            }
        } catch (error) {
            console.error('Error joining NGO:', error);
            showAlert('danger', 'An error occurred while trying to join the NGO.');
        }
    }
</script>

<%- include('../partials/footer') %>