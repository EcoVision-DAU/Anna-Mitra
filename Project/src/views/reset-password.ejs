<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="flex-grow-1">
    <div class="py-5 container">
        <div class="justify-content-center row">
            <div class="col-xl-9 col-lg-10 col-md-11">
                <div class="card login-card">
                    <div class="p-0 card-body">
                        <div class="g-0 row">
                            <div class="col-md-6 login-card-right">
                                <div class="text-center mb-4">
                                    <h2 class="login-title">Reset your password</h2>
                                    <p class="login-access-desc">Enter your new password</p>
                                </div>
                            
                                <!-- Step 1: Role Selection -->
                                <form id="resetPasswordForm" class="login-form" style="width: 100%;">
                                    <div class="mb-3">
                                        <input placeholder="Password" class="form-control login-input"
                                            type="password" name="password" id="password">
                                        <div class="error-message text-danger small mt-1"></div>
                                    </div>
                                    <div class="mb-3">
                                        <input placeholder="Confirm Password" class="form-control login-input"
                                            type="password" name="cpassword" id="cpassword">
                                        <div class="error-message text-danger small mt-1"></div>
                                    </div>
                                    <button type="submit" class="btn btn-primary login-btn">Reset now</button>
                                </form>
                            
                                <div class="text-center mt-4">
                                    <p class="login-register-link">
                                        Remembered your password?
                                        <a href="/auth/login" class="login-link">Login</a>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="d-flex col-md-6 login-card-left">
                                <div class="text-center position-relative">
                                    <div class="login-logo-circle">
                                        <h3 class="login-logo-text">
                                            ANNA<br>MITRA
                                        </h3>
                                    </div>
                                    <h3 class="login-welcome-title">RESET PASSWORD</h3>
                                    <p class="login-welcome-desc">No worries, we'll help you get back on track.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.resetToken = "<%= token %>";
</script>

<%- include('partials/footer') %>
