<%- include('../partials/header', { pageTitle: 'Donor Dashboard' }) %>
<%- include('../partials/navbar-dark') %>

<div class="d-flex am-dark" style="height: 95vh;">
  <%- include('../partials/sidebar-donor', { active: 'dashboard' }) %>

  <div class="content w-100 p-4 text-white" style="overflow-y:auto;">
    <div class="mb-4">
      <h4 class="mb-1">Dashboard</h4>
      <p class="text-secondary mb-0">Welcome back, <%= donor?.name || 'Donor' %>!</p>
    </div>

    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="card">
          <div class="card-body">
            <h6 class="text-secondary mb-2">Total Donations</h6>
            <h3 class="mb-0"><%= stats?.totalCount || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card">
          <div class="card-body">
            <h6 class="text-secondary mb-2">Impact Reached</h6>
            <h3 class="mb-0"><%= stats?.impact || 0 %> people</h3>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card">
          <div class="card-body">
            <h6 class="text-secondary mb-2">This Month</h6>
            <h3 class="mb-0"><%= stats?.thisMonth || 0 %></h3>
          </div>
        </div>
      </div>
    </div>

    <div class="card mt-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">Recent Donations</h5>
          <a class="btn btn-sm btn-outline-info" href="/donor/donations">View all</a>
        </div>
        <div class="table-responsive">
          <table class="table table-dark table-hover align-middle">
            <thead>
              <tr>
                <th>Date</th>
                <th>NGO</th>
                <th>Type</th>
                <th>Amount/Items</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% (recent || []).forEach(d => { %>
                <tr>
                  <td><%= d.date %></td>
                  <td><a href="/ngos/<%= d.ngoId %>" class="link-info text-decoration-none"><%= d.ngoName %></a></td>
                  <td><%= d.type %></td>
                  <td><%= d.summary %></td>
                  <td>
                    <span class="badge <%= d.status === 'Completed' ? 'bg-success' : (d.status === 'Pending' ? 'bg-warning' : 'bg-secondary') %>">
                      <%= d.status %>
                    </span>
                  </td>
                </tr>
              <% }) %>
              <% if (!recent || recent.length === 0) { %>
                <tr><td colspan="5" class="text-center text-secondary">No recent donations.</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('../partials/footer') %>
