<%- include('../partials/header', { pageTitle: 'Volunteer Dashboard' }) %>
<%- include('../partials/navbar-dark') %>

<div class="d-flex am-dark" style="height: 95vh;">
  <%- include('../partials/sidebar-volunteer', { active: 'dashboard' }) %>

  <div class="content w-100 p-4 text-white" style="overflow-y:auto;">
    <div class="mb-4">
      <h4 class="mb-1">Dashboard</h4>
      <p class="text-secondary mb-0">Welcome back, <%= volunteer?.name || (user && user.name) || 'Volunteer' %>!</p>
    </div>

    <!-- Quick stats -->
    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="card">
          <div class="card-body">
            <h6 class="text-secondary mb-2">Open Tasks</h6>
            <h3 class="mb-0"><%= stats?.openTasks || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card">
          <div class="card-body">
            <h6 class="text-secondary mb-2">Completed</h6>
            <h3 class="mb-0"><%= stats?.completedTasks || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">
        <div class="card">
          <div class="card-body">
            <h6 class="text-secondary mb-2">NGOs Joined</h6>
            <h3 class="mb-0"><%= stats?.joinedNgos || 0 %></h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Upcoming tasks -->
    <div class="card mt-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">Upcoming Tasks</h5>
          <a class="btn btn-sm btn-outline-info" href="/volunteer/assigned-tasks">View all</a>
        </div>
        <div class="table-responsive">
          <table class="table table-dark table-hover align-middle">
            <thead>
              <tr>
                <th>Due</th>
                <th>Task</th>
                <th>NGO</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% (upcoming || []).forEach(t => { %>
                <tr>
                  <td><%= t.dueDate %></td>
                  <td><%= t.title %></td>
                  <td><a href="/ngos/<%= t.ngoId %>" class="link-info text-decoration-none"><%= t.ngoName %></a></td>
                  <td>
                    <span class="badge <%= t.status === 'Pending' ? 'bg-warning' : (t.status === 'In Progress' ? 'bg-primary' : 'bg-success') %>">
                      <%= t.status %>
                    </span>
                  </td>
                  <td>
                    <a class="btn btn-sm btn-outline-light" href="/volunteer/assigned-tasks#task-<%= t._id %>">Open</a>
                  </td>
                </tr>
              <% }) %>
              <% if (!upcoming || upcoming.length === 0) { %>
                <tr><td colspan="5" class="text-center text-secondary">No upcoming tasks.</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Joined NGOs -->
    <div class="card mt-4">
      <div class="card-body">
        <h5 class="mb-3">Your NGOs</h5>
        <div class="row g-4">
          <% (joinedNgos || []).forEach(n => { %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card h-100">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= n.name %></h5>
                  <p class="card-text text-secondary"><%= n.tagline || '—' %></p>
                  <div class="mt-auto">
                    <a class="btn btn-outline-light" href="/volunteer/joined-ngos#ngo-<%= n._id %>">View</a>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
          <% if (!joinedNgos || joinedNgos.length === 0) { %>
            <div class="col-12">
              <div class="card"><div class="card-body text-center text-secondary">You haven’t joined any NGOs yet.</div></div>
            </div>
          <% } %>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('../partials/footer') %>
